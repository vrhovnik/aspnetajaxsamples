@model List<Person>

@if (Model.Any())
{
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
        </tr>
        @foreach (var person in Model)
        {
            <tr>
                <td>
                    @person.Name
                </td>
                <td>@person.Surname</td>
                <td>@person.Age</td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-info">No data found</p>
}